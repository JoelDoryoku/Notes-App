---
import AllNotes from '../components/Notes.svelte';
const {title} = Astro.props;
---
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="stylesheet" type="text/css" href={Astro.resolve('../styles/output.scss')} />
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.15.4/css/all.css" crossorigin="anonymous">
	</head>
	<body class="flex space-x-4 bg-neutral-200">
        <nav class="flex flex-col h-screen w-2/12 p-4 bg-neutral-800">
            <ul class="space-y-4">
                <li>
                    <h1 class="text-white font-bold text-2xl text-center">Notes App</h1>
                </li>
            </ul>
        </nav>
		<div class="w-full h-screen p-4 flex flex-wrap gap-4 overflow-x-hidden overflow-y-scroll hideScrollbar">
            <AllNotes client:load />
        </div>
	</body>
</html>